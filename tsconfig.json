{
  "version": "3.8.3",
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts",
    "**/*.test.ts"
  ]
}
